        python3 docker/check_deps.py --auto-install || echo "âš ï¸ ä¾èµ–æ£€æµ‹å®Œæˆ"; \
    else \
        echo "âš ï¸ check_deps.py ä¸å­˜åœ¨ï¼Œè·³è¿‡ä¾èµ–æ£€æµ‹"; \
    fi

WORKDIR ${BUILD_PREFIX}

ADD docker/entrypoint.sh /entrypoint.sh

RUN chmod +x /entrypoint.sh \
    && mkdir -p /home/noroot \
