    && cd ${BUILD_PREFIX} \
    && cp config-template.json config.json \
    && python3 -m pip install --no-cache --upgrade pip -i https://pypi.tuna.tsinghua.edu.cn/simple \
    && pip3 install --no-cache -r requirements.txt -i https://pypi.tuna.tsinghua.edu.cn/simple \
    && pip3 install --no-cache -r requirements-optional.txt -i https://pypi.tuna.tsinghua.edu.cn/simple \
